<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#75bfff" />

        <ImageButton
            android:id="@+id/btn_OpenDrawer"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_menu_black_24dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/menubtn" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="582dp">

        <ImageView
            android:id="@+id/MainPage_NameMap_imgbtn"
            android:layout_width="379dp"
            android:layout_height="550dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#CDE9F7"
            android:paddingRight="170dp"
            />

        <Button
            android:id="@+id/addword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="#B0FFCACA"
            android:text="추가" />

        <EditText
            android:id="@+id/mean"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:ems="20"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/word"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:ems="20"
            android:inputType="textPersonName" />

        <ScrollView
            android:layout_width="365dp"
            android:layout_height="347dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/wordListCotainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wordView"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/meanView"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#75bfff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/quizBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/home"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/home_img_btn" />

            <ImageButton
                android:id="@+id/bottom_list_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_favorite_border_white_24dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/like_img_btn" />

            <ImageButton
                android:id="@+id/bottomBar_etc_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_more_horiz_white4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/etc_img_btn" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>